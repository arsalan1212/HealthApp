<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/spash_back"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <include layout="@layout/app_toolbar"
        android:id="@+id/bodyfat_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Body Fat"
        android:textSize="40sp"
        android:gravity="center"
        android:typeface="serif"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Calculator"
        android:textSize="25sp"
        android:gravity="center"
        android:typeface="serif"
        android:layout_marginTop="-8dp"
        />
    <!-- ScrollView start -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gender layout Start -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Gender:"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Male"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioBodyFatMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Female"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/radioBodyFatFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" />


                </RadioGroup>
            </LinearLayout>

            <!-- Gender layout end -->




            <EditText
                android:id="@+id/et_BodyFatWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/searchbox"
                android:hint="Enter your Weight in Pounds (i.e. 65)"
                android:inputType="number|numberDecimal"
                android:padding="12dp"
                android:textColor="#767676"
                android:textColorHint="#767676" />


            <EditText
                android:id="@+id/et_BodyFatWaist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/searchbox"
                android:hint="Enter your Waist in inch(i.e. 27)"
                android:inputType="number|numberDecimal"
                android:padding="12dp"
                android:textColor="#767676"
                android:textColorHint="#767676" />

            <Button
                android:id="@+id/calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#2e80a0"
                android:onClick="calculateBodyFat"
                android:padding="10dp"
                android:text="@string/calculateBodyFat"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/BodyFatResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="20sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tvBodyFatDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="20sp"
                android:typeface="serif"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tv_background"/>

        </LinearLayout>
    </ScrollView>

    <!-- ScrollView end-->
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/banner"
        android:background="#216966">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon"
            android:layout_marginLeft="10dp"
            android:onClick="GoBackbtn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Tap Body Parts"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/info"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:padding="30dp"
        android:src="@drawable/skelaton"/>
    <ImageView
        android:id="@+id/brain_"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_below="@id/banner"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/brain_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/teeth_"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_below="@id/brain_"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/teeth_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/lungs_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/teeth_"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/lungs"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/liver_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/lungs_"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/liver_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/vines_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/liver_"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/vines_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/bones_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/vines_"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/bones_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/eye_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/banner"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/eye_cion"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/heart_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/eye_"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/heart_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/kidney_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/heart_"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/kindney_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/digestive_system_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/kidney_"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/digestive_sysytem_icon"
        android:onClick="bodyPartsClickListiner"/>
    <ImageView
        android:id="@+id/nail_"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_below="@id/digestive_system_"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="35dp"
        android:src="@drawable/nail_icon"
        android:onClick="bodyPartsClickListiner"/>

</RelativeLayout>